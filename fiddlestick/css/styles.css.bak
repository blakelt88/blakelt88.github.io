body {
                
    font-family: sans-serif;
    padding:0;
    margin:0;  
}

html,body {
	overflow:0;
}

#header {
    
    width:100%;
    background: rgb(0, 0, 0);
    padding:10px;
    height: 30px;
    
}

#logo {
    
    float:left;
    font-weight: bold;
    font-size: 150%;
    padding: 3px 5px;
    color:white;
    
}

#buttonContainer {
    
    width:300px;
    margin: 0 auto;   
}

.toggleButton {
    
    float:left;
    border:solid 1px rgb(0,0,0);
    padding: 6px;
    font-size: 90%;
    margin-right:5px;
}

.active {
    
    background-color: #009ACD;
    color:white;
    
}

input {
			outline:0px !important;
    -webkit-appearance:none;
}


textarea {
		outline:0px !important;
    -webkit-appearance:none;
    color:white;
    font-size:16px;
    font-weight:bold;
    resize:none;
    border:solid 2.5px rgba(0,0,0,0.8);
}

.panel {
    
    float:left;
    width: 50%;
    border-left: none;
    background:rgba(0,0,0,0.8);
    padding-left:5px;
    padding-top:5px;
}

iframe {
	
    border:solid 2.5px rgba(0,0,0,0.8);
    
}

.hidden {
    
    display: none;
    
}